<workflow-app xmlns="uri:oozie:workflow:0.1" name="${celosWorkflowName}">
    <start to="fsDeleteAction" />
    <action name="fsDeleteAction">
        <fs>
            <delete path='${outputPath}/_common_metadata'/>
            <delete path='${outputPath}/_metadata'/>
        </fs>
        <ok to="hiveaction-input"/>
        <error to="fail"/>
    </action>
    <action name="hiveaction-input">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>quickstart.cloudera:8032</job-tracker>
            <name-node>hdfs://quickstart.cloudera:8020</name-node>
            <job-xml>${hive_defaults}</job-xml>
            <script>input_hive_script.sql</script>
            <param>inputDir=${inputPath}</param>
            <param>year=${year}</param>
            <param>month=${month}</param>
            <param>day=${day}</param>
            <param>hour=${hour}</param>
            <param>input_output=input</param>
        </hive>
        <ok to="mr-node"/>
        <error to="fail"/>
    </action>
    <action name="mr-node">
        <java>
            <job-tracker>quickstart.cloudera:8032</job-tracker>
            <name-node>hdfs://quickstart.cloudera:8020</name-node>
            <main-class>com.segmentreader.mapreduce.Main</main-class>
            <arg>-i</arg>
            <arg>${inputPath}</arg>
            <arg>-o</arg>
            <arg>${outputPath}</arg>
        </java>
        <ok to="hiveaction-output" />
        <error to="fail" />
    </action>
    <action name="hiveaction-output">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>quickstart.cloudera:8032</job-tracker>
            <name-node>hdfs://quickstart.cloudera:8020</name-node>
            <job-xml>${hive_defaults}</job-xml>
            <script>output_hive_script.sql</script>
            <param>outputDir=${outputPath}</param>
            <param>year=${year}</param>
            <param>month=${month}</param>
            <param>day=${day}</param>
            <param>hour=${hour}</param>
            <param>input_output=output</param>
        </hive>
        <ok to="end"/>
        <error to="fail"/>
    </action>

    <kill name="fail">
        <message>Java app failed, error
            message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end" />
</workflow-app>